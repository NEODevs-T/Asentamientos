    @* <link rel="stylesheet" href="_content/Radzen.Blazor/css/software-base.css">   *@
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />

    <link rel="stylesheet" href="Asentamientos.styles.css" />
    <link rel="stylesheet" href="css/app.css" />
    <link rel="stylesheet" href="css/index.css" />
    <link rel="stylesheet" href="css/table.css" />
    <link rel="stylesheet" href="css/carga.css" />
    <link rel="stylesheet" href="css/corteestilos.css" />


    <HeadOutlet @rendermode="new InteractiveServerRenderMode(prerender: false)" />
</head>

<body>

    <Routes @rendermode="new InteractiveServerRenderMode(prerender: false)" />
    <script src="_framework/blazor.web.js"></script>
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
    <script src="js/imprimir.js"></script>
    @code {
        public string baseUrl { get; set; }

        protected override void OnInitialized()
        {
            baseUrl = HttpContextAccessor.HttpContext.Request.PathBase.HasValue ? HttpContextAccessor.HttpContext.Request.PathBase.ToString() : "/";
        }
    }
</body>

</html>
