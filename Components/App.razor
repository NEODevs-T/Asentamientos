@inject  Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <base href="~/asentamientos/" /> *@
    <base href="@baseUrl" />
    <link rel="shortcut icon" href="./images/neo.ico" type="image/x-icon">

    <link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    @* <link rel="stylesheet" href="_content/Radzen.Blazor/css/dark-base.css">       *@
    @* <link rel="stylesheet" href="_content/Radzen.Blazor/css/default-base.css">    *@
    @* <link rel="stylesheet" href="_content/Radzen.Blazor/css/fluent-base.css">     *@
    @* <link rel="stylesheet" href="_content/Radzen.Blazor/css/humanistic-base.css"> *@
